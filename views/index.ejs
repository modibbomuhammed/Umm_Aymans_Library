		<div class="container">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-8">
		
        <h1 class="my-4">Welcome to Umm Ayman's Blog <br/>
          <small>Let's indulge in the written words</small>
			<% if(currentUser && currentUser.isAdmin){ %>
			<br />
			<a href="/blogs/new" class="btn btn-primary btn-sm">
				CREATE NEW POST
			</a>
			<% } %>
        </h1>

        <!-- Blog Post -->
		  <% blogs.docs.forEach((blog)=> { %>
	
        <div class="card mb-4">
          <img class="card-img-top" src="<%= blog.image.url %>" alt="Card image cap">
          <div class="card-body">
            <h2 class="card-title"><%= blog.title %></h2>
            <p class="card-text"><%= blog.content %></p>
            <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Posted on <%= blog.date.toDateString() %> by
			  <% if(blog.author) { %>
            <a href="#"><%= blog.author.username %></a>
			  <% } %>
          </div>
        </div>

		 <% }) %>
		
		  
        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
			<% if(!blogs.hasPrevPage){ %>
				
			<li class="page-item disabled">
				<a class="page-link" href="#">&larr; Newer</a>
			  </li>
			  <li class="page-item">
				<a class='page-link' href='<%= paginateUrl %><%= blogs.nextPage %>'>Older &rarr;</a>
            </li>
			
			<% } else if(blogs.hasPrevPage && blogs.hasNextPage ) { %>
				
				<li class="page-item">
					<a class="page-link" href="<%= paginateUrl %><%= blogs.prevPage %>">&larr; Newer</a>
				  </li>
				  <li class="page-item">
					<a class="page-link" href="<%= paginateUrl %><%= blogs.nextPage %>">Older &rarr;</a>
          		</li>
			
			
			<% }  else { %>
				
					<li class="page-item">
						<a class="page-link" href="<%= paginateUrl %><%= blogs.prevPage %>">&larr; Newer</a>
					  </li>
					  <li class="page-item disabled">
						<a class="page-link" href="#">Older &rarr;</a>
          			</li>	
			
			<% } %>
          
        </ul>

      </div>
		
		
<!-- 	side widget	 -->
		
	<!-- Sidebar Widgets Column -->
      <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
          <h5 class="card-header">Search</h5>
          <div class="card-body">
            	<form action='/blogs' method='GET'>
			  <div class="input-group">
              <input type="text" class="form-control" name='search' placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-secondary">Go!</button>
              </span>	
            </div>
				</form>
          </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">Categories</h5>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="#">Fiction</a>
                  </li>
                  <li>
                    <a href="#">Non-Fiction</a>
                  </li>
                  <li>
                    <a href="#">Islamic</a>
                  </li>
                </ul>
              </div>
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="#">Thriller</a>
                  </li>
                  <li>
                    <a href="#">Bookclub</a>
                  </li>
                  <li>
                    <a href="#">Uncategorised</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>


		
		<%- include('partials/footer') %>
		
	